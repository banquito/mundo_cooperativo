/*-------------------------------------- */
/*  [ Buttons ] */
/*--------------------------------------- */
.button
  button(#60aae9, white)
  &.success
    button-skin(#aece4e, white)
  &.danger
    button-skin(#e77755, white)
  &.warning
    button-skin(#f4c84f, white)
  &.pale
    button-skin(#edebe8, #555555)
  &.disabled
    cursor: default
    color: white
    background-color: #aaaaaa
