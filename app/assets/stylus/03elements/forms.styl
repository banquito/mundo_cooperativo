/* forms */
form 
  fieldset  
    margin 0 0 15px 0
    padding 0
    border none 
    legend 
      font-size 2rem
      font-family $titleFont
      line-height 3em

/* hForm
-------------------------------------------------------------- */
mixFormHorizontal() 
  p  
    label
      float left
      width 25%
      margin-right 5%
      text-align right
    input[type="text"], 
    input[type="number"], 
    input[type="email"], 
    input[type="password"], 
    select
      width 50%
    textarea  
      width 50%
    &.checkbox
      margin-left 30%
      height auto
      label
        text-align left 
        width auto
        margin-right 1em
        display inline
        float none

/* vForm
-------------------------------------------------------------- */
mixFormVertical()
  p
    label
      display block
    &.checkbox label
      display inline

/* user
-------------------------------------------------------------- */

mixUser()
  background darken(#5c5c5c, 15%)
  padding 1em
  border-bottom 1px solid #696969
  figure
    float left
    background #fff
    border 2px solid #fff
    margin 0 1em 0 0
    display block
    img 
      display block
      size(35px, 35px)
  h4
    margin 0
    color #ddd
    font-size 1.5rem
  p 
    color #fff
    margin 0
    a 
      color #fff
      &:hover
        text-decoration none
        color #ddd

/* search
-------------------------------------------------------------- */

mixFormSearch()  
  padding 10px
  inner-shadow(0 -10px 50px #444)
  margin 0
  border-bottom 1px solid lighten(#5c5c5c, 5%)
  p
    margin-bottom 0
  input
    border none
    background #fff
    padding 5px
    margin-right 10px
    border-radius 3px
    width 150px
  button  
    mixButton(1.9)
    mixIcon($icon-search)
    padding 0 10px
    &:before 
      margin-right 0
