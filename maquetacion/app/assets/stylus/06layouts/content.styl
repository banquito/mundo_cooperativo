section
  cf()
  clear: left
  padding: 30px 0
  .content
    clear: both
    max-width: 800px
    padding: 0 20px
    margin: auto

.help  
  h2 
    color: $colorInstitucional
    font-size: 36px
    margin-bottom: 10px
    +above(3)
      text-align: right
  p
    font-size: 18px
    +above(3)
      text-align: right
  +above(3)
    column(2/5)
  +below(2)
    column(1)

.karma,
.panel
  +above(3)
    column(3/5)
    box-sizing: border-box
    padding-left: 20px
    border-left: 5px solid $colorInstitucional

  +below(2)
    column(1)