.box
  +above(3)
    column(1/3, cycle: 3)
  +below(2)
    float: none
    width: auto
  
  min-height: 100px
  position: relative
  margin: 30px auto
  
  h5,
  h6,
  p
    text-align: left
    padding-left: 90px
  a
    display: block
    position: relative
    z-index: 2

  &:before
    display: block
    position: absolute
    left: 0
    border-radius: 60px
    size: 80px
    text-align: center
    line-height: 80px
    background: $colorInactivo
    transition: 500ms ease
  &:hover
    &:before
      box-shadow: 0 0 5px 2px rgba(0,0,0,0.2)

  h5 
    font-size: 26px
    margin: 0
  p
    font-size: 16px
    color: $textColor
    
  &.box-miembros
    h5
      color: $colorMiembros
    &:before
      mixIconSrc($icon-users, #fff, 50px)
    &.active:before,
    &:hover:before
      background: $colorMiembros
  &.box-objetivo
    h5
      color: $colorObjetivo
    &:before
      mixIconSrc($icon-cogs, #fff, 50px)
    &.active:before,
    &:hover:before
      background: $colorObjetivo
  &.box-lugar
    h5
      color: $colorLugar
    &:before
      mixIconSrc($icon-location, #fff, 50px)
    &.active:before,
    &:hover:before
      background: $colorLugar
  &.box-nombre
    h5
      color: $colorNombre
    &:before
      mixIconSrc($icon-heart, #fff, 50px)
    &.active:before,
    &:hover:before
      background: $colorNombre
  &.box-formacion
    h5
      color: $colorFormacion
    &:before
      mixIconSrc($icon-quill, #fff, 50px)
    &.active:before,
    &:hover:before
      background: $colorFormacion
  &.box-capital
    h5
      color: $colorCapital
    &:before
      mixIconSrc($icon-stats, #fff, 50px)
    &.active:before,
    &:hover:before
      background: $colorCapital

.boxes-inaes
  margin: 30px auto
  clear: both
  display: table
  &.help
    margin: 0 3% 0 0
    .box.box-convocatoria,
    .box.box-tramite
      &:before
        +above(3)
          width: 80px
          height: 80px
          line-height: 80px
          font-size: 50px

  h5
    color: $colorTramite
  .box
    float: none
    width: auto
    color: $colorTramite
    &:before
      top: -5px
    &.active:before,
    &:hover:before
      background: $colorTramite
    &.box-convocatoria
      &:before
        mixIconSrc($icon-calender, #fff, 50px)
        +above(3)
          size: 110px
          left: -25px
          top: -10px
          font-size: 80px
          line-height: 110px
    &.box-asamblea
      &:before
        mixIconSrc($icon-bullhorn, #fff, 50px)
    &.box-acta-consejo
      &:before
        mixIconSrc($icon-pen, #fff, 50px)
    &.box-tramite
      &:before
        mixIconSrc($icon-newspaper, #fff, 50px)
        +above(3)
          size: 110px
          left: -25px
          top: -10px
          font-size: 80px
          line-height: 110px

#profile
  .help
    .box
      +above(3)
        padding-top: 100px
        margin: 0
        &:before
          left: auto
          right: 0
          top: 0;
      +below(2)
        &:before
          top: -10px
      float: none
      width: auto
      h5,
      h6,
      p
        +above(3)
          text-align: right
      h6
        font-size: 16px
        +below(2)
          min-height: 38px
      p
        font-size: 14px
        +below(2)
          padding-left: 0