#profile
  .content
    margin-bottom: 50px
    cf()
  .help
    h2 
      color: $colorInstitucional
      font-size: 36px
      margin-bottom: 10px
      +above(3)
        text-align: right
    p
      font-size: 18px
      +above(3)
        text-align: right
    +above(3)
      column(2/5)
    +below(2)
      column(1)

  .karma
    h3
      color: $colorInstitucional
      font-size: 20px
      margin-bottom: 0
      padding: 15px 0 18px
      line-height: 25px
    p
      font-size: 12px
    .gotas
      .gota
        display: inline
        line-height: 30px
        mixIcon($icon-droplet2, $colorInactivo, 30px)
        &:before
          margin-right: 0
        &.active:before
          color: $colorGota
    +above(3)
      column(3/5)
      box-sizing: border-box
      padding-left: 20px
      border-left: 5px solid $colorInstitucional

    +below(2)
      column(1)