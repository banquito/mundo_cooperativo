#profile
  .content
    margin-bottom: 50px
    cf()
    .col-2
      cf()
      p
        column(1/2)
    textarea
      height: 100px

    [href="#editar"]
      font-size: 2em
      &:before
        mixIconSrc($icon-arrow-right-thick)

    .descargar
      button($colorInstitucional)
      mixIcon($icon-download)
      font-size: 22px
      margin: 10px 0 5px

    .volver
      margin-left: 20px
      font-size: 14px

    h3
      color: $colorInstitucional

    h4
      color: $colorInstitucional
      margin: 20px 0

    h5
      font-size: 16px